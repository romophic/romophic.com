---
import '@/styles/global.css'
import '@/styles/typography.css'
import '@fontsource-variable/noto-sans-jp'
import 'katex/dist/katex.min.css'

import { ClientRouter } from 'astro:transitions'

import { CommandMenu } from '@/components/features/CommandMenu'
import Footer from '@/components/layout/Footer.astro'
import { GlobalLinkPreviews } from '@/components/features/GlobalLinkPreviews'
import Head from '@/components/layout/Head.astro'
import Header from '@/components/layout/Header.astro'
import PageLoader from '@/components/features/PageLoader.astro'
import ReloadPrompt from '@/components/features/ReloadPrompt.astro'
import ScrollProgress from '@/components/common/ScrollProgress.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'
import { getCollection } from 'astro:content'

const posts = await getCollection('blog')
const cleanPosts = posts.map((post) => ({
  id: post.id,
  title: post.data.title,
  description: post.data.description,
  slug: post.id, // Assuming id is slug for now or close enough. id includes content/blog/ path? No, simple slug usually
}))

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <ClientRouter />
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    <ScrollProgress />
    <header
      class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main class="mx-auto flex w-full grow flex-col" data-pagefind-body>
      <div class={cn('flex flex-col gap-y-6 w-full mx-auto px-4', className)}>
        <slot />
      </div>
    </main>
    <Footer />
    <PageLoader />
    <ReloadPrompt />
    <CommandMenu client:idle posts={cleanPosts} />
    <GlobalLinkPreviews client:only="react" />
  </body>
</html>
