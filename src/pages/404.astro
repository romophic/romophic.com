---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="404" />
  <Breadcrumbs items={[{ label: '???', icon: 'lucide:circle-help' }]} />

  <section
    class="flex flex-col items-center justify-center gap-y-6 py-24 text-center"
  >
    <div class="space-y-4">
      <h1 class="text-9xl font-extrabold tracking-tighter text-muted-foreground/20">
        404
      </h1>
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl">
        Page not found
      </h2>
      <p class="mx-auto max-w-md text-muted-foreground">
        Sorry, we couldn't find the page you're looking for. It might have been
        moved, deleted, or never existed in the first place.
      </p>
    </div>
    <div class="flex gap-4">
      <Link
        href="/"
        class={cn(buttonVariants(), 'flex gap-x-2')}
      >
        Go Home
      </Link>
      <Link
        href="/blog"
        class={cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-2')}
      >
        Read Blog
      </Link>
    </div>
  </section>
</Layout>
