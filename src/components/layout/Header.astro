---
import Link from '@/components/common/Link.astro'
import ThemeToggle from '@/components/layout/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <span
        class="hidden h-full text-lg leading-none font-medium min-[400px]:block"
        >{SITE.title}</span
      >
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <button
        class="focus-visible:ring-ring hover:bg-accent hover:text-accent-foreground inline-flex h-9 w-9 items-center justify-center rounded-md px-0 py-2 font-medium transition-colors focus-visible:ring-1 focus-visible:outline-none disabled:pointer-events-none disabled:opacity-50"
        onclick="window.toggleCommandMenu()"
        aria-label="Open Command Menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-search size-5"
          ><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"
          ></path></svg
        >
        <span class="sr-only">Search</span>
      </button>
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
