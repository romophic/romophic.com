    "radix-ui": "^1.3.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
